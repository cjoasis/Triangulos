    private void aveActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_aveActionPerformed
     
        int a1,a2,a3;
     
        a1=Integer.parseInt(ang1.getText());
        a2=Integer.parseInt(ang2.getText());
        a3=Integer.parseInt(ang3.getText());
            
        if ((a1==a2)&&(a2==a3)&&(a1==a3))
        {JOptionPane.showMessageDialog(null,"Tu triangulo es un Equilatero");}
        if ((a1!=a2)&&(a2!=a3)&&(a1!=a3))
        {JOptionPane.showMessageDialog(null,"Tu triangulo es un Escalenos");}
        else {JOptionPane.showMessageDialog(null, "Tu triangulo es un isoseles");
            
            }
    }//GEN-LAST:event_aveActionPerformed

